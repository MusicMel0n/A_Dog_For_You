#:kivy 2.0
#:import kivy kivy
<CustButton@Button>
    font_size: 32
    color: 1, 1, 1, 1
    size: 200, 50
    background_normal: 'res/button_down.png'
    background_down: 'res/button_down.png'
    background_color: 1, 1, 1, 1
    on_press: self.background_color = 1, 1, 1, 0.3
    on_release: self.background_color = 1, 1, 1, 1

<ScreenOne>:
    canvas.before:
        #Color:
            #rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'res/back.png'

    CustButton:
        size: 200, 50
        size_hint: None, None
        text: "Login"
        color: '#707070'
        pos: 114, 480
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "login_screen"

    CustButton:
        size: 200, 50
        size_hint: None, None
        text: "Register"
        color: '#707070'
        pos: 114, 400
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "register_screen"



<ScreenTwo>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'res/back.png'

    TextInput:
        id: Email
        hint_text: "Email"
        pos: 114, 480
        size_hint: None, None
        multiline: False
        size: 200, 40
        background_normal: 'res/input.png'
        background_active: 'res/input.png'
        cursor_color: 0, 0, 0, 1

    TextInput:
        id: password
        hint_text: "Password"
        pos: 114, 420
        size_hint: None, None
        multiline: False
        size: 200, 40
        background_normal: 'res/input.png'
        background_active: 'res/input.png'
        cursor_color: 0, 0, 0, 1
        password: True 

    Label:
        id: wrong
        text: ""
        color: '#FF0000'

    CustButton:
        text: "Login"
        pos: 139, 300
        size_hint: None, None
        size: 150, 50
        color: '#707070'
        on_release: print(root.manager.get_screen('login_screen').ids.Email.text, "\n", root.manager.get_screen('login_screen').ids.password.text)
        on_release: 
            #if root.manager.get_screen('login_screen').ids.Email.text == "test@gmail.com" and root.manager.get_screen('login_screen').ids.password.text == "password":
            root.manager.current = "main_screen"
            root.manager.transition.direction = "left"

    CustButton:
        text: "Back"
        pos: 139, 220
        size: 150,50
        color: '#707070'
        size_hint: None, None
        on_release: 
            root.manager.transition.direction = "right"
            root.manager.current = "home_screen"



